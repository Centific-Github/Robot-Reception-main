<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".PortalActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
       android:src="@drawable/background" />




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center"
        android:gravity = "center_horizontal"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:useDefaultMargins="true"
        >


        <FrameLayout  android:layout_width="750px"
            android:layout_height="350px"
            android:layout_margin="80px"
            android:layout_centerInParent="true"
            >
            <ImageButton android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/portal_button_bg"
                android:id="@+id/portal_bu_visitor" />
            <ImageButton

                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginBottom="30px"
                android:src="@drawable/visit" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="70px"
                android:text="Visit" >
            </TextView>
        </FrameLayout>


        <FrameLayout  android:layout_width="750px"
            android:layout_height="350px"
            android:layout_margin="80px"
            android:layout_centerInParent="true"  >
            <ImageButton android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/portal_button_bg"
                android:id="@+id/portal_bu_deliver" />
            <ImageButton

                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginBottom="30px"
                android:src="@drawable/deliver" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="70px"
                android:text="Deliver" >
            </TextView>
        </FrameLayout>



        <FrameLayout  android:layout_width="750px"
            android:layout_height="350px"
            android:layout_margin="80px"
            android:layout_centerInParent="true"  >
            <ImageButton android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/portal_button_bg"
                android:id="@+id/ib_interview" />
            <ImageButton

                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginBottom="30px"
                android:src="@drawable/interview" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="70px"
                android:text="Interview" >
            </TextView>
        </FrameLayout>



        <FrameLayout  android:layout_width="750px"
            android:layout_height="350px"
            android:layout_margin="80px"
            android:layout_centerInParent="true"  >

            <ImageButton android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/portal_button_bg"
                android:id="@+id/ib_onboard" />
            <ImageButton

                android:layout_width="150px"
                android:layout_height="150px"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginBottom="30px"
                android:src="@drawable/onboard" >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginTop="70px"
                android:text="Onboard" >
            </TextView>
        </FrameLayout>


    </GridLayout>


    <TextView   android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pactera Edge Service"
        android:textSize="48sp"
        android:layout_marginTop="20px"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="500px"
        android:layout_height="250px"
        android:layout_margin="50px"
        android:layout_gravity="bottom|right"
        android:src="@drawable/logo" />
</FrameLayout>